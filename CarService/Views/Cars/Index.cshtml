@model CarService.ViewModels.CarIndexVM

@{
    ViewData["Title"] = "Index";
}

<h2>Registered cars</h2>

<p>
    <a asp-action="Create" style="font-size:large">Register my car</a>
</p>
<form asp-controller="Cars" asp-action="Index" method="get">
    <div class="row" style="margin-left:7px">
        <div class="form-group">
      
                <b>Model:</b> <input class="form-group" type="text" name="model">
                <b>Series:</b> <input type="text" class="form-group" name="series">                       
                <b>Type:</b> <select class="form-group-25" style="min-height:25px" asp-for="@Model.СarType" asp-items="Model.СarTypeList">
                    <option value="">All</option>
                </select>            
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

@if (Model.Cars.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cars[0].Model)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cars[0].Series)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cars[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cars[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cars[0].ReleaseDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cars)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Series)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>

                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>There are no cars in database with preset filters</h3>

}
